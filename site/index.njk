{% extends "default.njk" %}

{% block content %}    <div class="posts">
    {% for post in collections.posts -%}
    <article class="post" data-input-path="{{ post.filePathStem }}">
      <h1 class="post-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h1>
      <time datetime="{{ post.date | dateISO }}">{{ post.date | dateFormat('LL') }}</time>
{{ post.templateContent | safe }}    </article>
    {% endfor %}
    </div>{% endblock %}